\begin_layout Standard

\series bold
\lang hebrew
הגדרה : 
\series default
נאמר שפונקציה 
\begin_inset Formula $f:\mathbb{R}^{n}\rightarrow\mathbb{R}$
\end_inset

 המקיימת 
\begin_inset Formula $f\in C^{1}$
\end_inset

 היא 
\begin_inset Formula $\beta-\text{smooth}$
\end_inset

 אם לכל 
\begin_inset Formula $\x,\y\in\mathbb{R}^{n}$
\end_inset

 מתקיים 
\end_layout

\begin_layout Standard

\lang hebrew
\begin_inset Formula 
\[
f\left(\y\right)\leq f\left(\x\right)+\nabla f\left(\x\right)^{\top}\left(\y-\x\right)+\frac{\beta}{2}\|\x-\y\|^{2}
\]

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
תהיי 
\begin_inset Formula $f:\mathbb{R}^{n}\rightarrow\mathbb{R}$
\end_inset

 פונקציה 
\begin_inset Formula $\beta-\text{smooth}$
\end_inset

 ואי שלילית.
 
