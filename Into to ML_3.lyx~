\begin_layout Standard

\lang hebrew
עבור 
\begin_inset Formula $x\geq2$
\end_inset

 מתקיים כי 
\begin_inset Formula 
\[
1+\ln\left(x\right)\leq4\ln\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
כיוון ש 
\begin_inset Formula 
\[
1<\ln\left(8\right)\leq\ln\left(x^{3}\right)=4\ln\left(x\right)-\ln\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
ולכן 
\begin_inset Formula 
\[
\frac{1}{4}+\frac{1}{4}\ln\left(x\right)\leq\ln\left(x\right)
\]

\end_inset

אם כן מתקיים כי 
\begin_inset Formula 
\[
\gamma\sqrt{M}\leq\sqrt{\frac{1}{4}+\frac{1}{4}\ln\left(M\right)}\leq\sqrt{\ln\left(M\right)}
\]

\end_inset

 ולכן 
\begin_inset Formula 
\[
\gamma^{2}M\leq\ln\left(M\right)
\]

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
ומהרמז מתקיים כי 
\begin_inset Formula 
\[
M\leq\frac{2}{\gamma^{2}}\ln\left(\frac{1}{\gamma^{2}}\right)=\frac{4}{\gamma^{2}}\ln\left(\frac{1}{\gamma^{2}}\right)
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard

\lang hebrew
לכן סה
\begin_inset Quotes erd
\end_inset

כ מתקיים כי 
\begin_inset Formula $\frac{4}{\gamma^{2}}\ln\left(\frac{1}{\gamma^{2}}\right)$
\end_inset

 חוסם את 
\begin_inset Formula $M$
\end_inset

 כנדרש.
 
