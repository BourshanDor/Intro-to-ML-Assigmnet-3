\begin_layout Standard

\lang hebrew
נתבונן ב 
\begin_inset Formula 
\begin{align*}
\max\left\{ 0,1-sgn\left(y_{j}-y_{r}\right)\left\langle \w,\x_{j}-\x_{r}\right\rangle \right\}  & =\max\left\{ 0,1-sgn\left(y_{j}-y_{r}\right)\left(y_{j}'-y_{r}'\right)\right\} \\
 & =\begin{cases}
t\left(y\right) & sgn\left(y_{j}-y_{r}\right)\left(y_{j}'-y_{r}'\right)<1\\
0 & otherwise
\end{cases}\\
 & =\begin{cases}
t\left(y\right) & sgn\left(y_{j}-y_{r}\right)sgn\left(y_{j}'-y_{r}'\right)\left|y_{j}'-y_{r}'\right|<1\\
0 & otherwise
\end{cases}\\
 & =\begin{cases}
1+p\left(y\right) & sgn\left(y_{j}-y_{r}\right)\neq sgn\left(y_{j}'-y_{r}'\right)\\
r\left(y\right) & sgn\left(y_{j}-y_{r}\right)=sgn\left(y_{j}'-y_{r}'\right)\wedge\left|y_{j}'-y_{r}'\right|<1\\
0 & otherwise
\end{cases}
\end{align*}

\end_inset


