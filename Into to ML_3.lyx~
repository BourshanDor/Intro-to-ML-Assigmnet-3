\begin_layout Standard

\lang hebrew
תהיי 
\begin_inset Formula $f:\mathbb{R}^{n}\rightarrow\mathbb{R}$
\end_inset

 פונקציה קמורה, 
\begin_inset Formula $A\in\mathbb{R}^{n\times n}$
\end_inset

 ו 
\begin_inset Formula $\b\in\mathbb{R}^{n}$
\end_inset

.
 נראה כי 
\begin_inset Formula $g\left(\x\right)=f\left(A\x+\b\right)$
\end_inset

 היא פונקציה קמורה.
 
\end_layout

\begin_layout Standard

\lang hebrew
ניזכר כי מטריצה 
\begin_inset Formula $A$
\end_inset

 מגדירה העתקה לינארית, כלומר 
\begin_inset Formula $A$
\end_inset

 היא פונקציה 
\begin_inset Formula $T_{A}:\mathbb{R}^{n}\rightarrow\mathbb{R}^{n}$
\end_inset

 .
 אם כן נסמן את הקבוצה הבאה : 
\begin_inset Formula 
\[
C=\left\{ A\x+\b\mid\x\in\mathbb{R}^{n}\right\} \subseteq\mathbb{R}^{n}
\]

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
\begin_inset Formula $C$
\end_inset

 קבוצה קמורה.
 יהיי 
\begin_inset Formula $\lambda\in\left(0,1\right)$
\end_inset

, ויהיו 
\begin_inset Formula $\c_{1},\c_{2}\in C$
\end_inset

, קיימים 
\begin_inset Formula $\x_{1},\x_{2}\in\mathbb{R}^{n}$
\end_inset

 כך ש 
\begin_inset Formula $\c_{i}=A\x_{i}+\b$
\end_inset

 עבור 
\begin_inset Formula $i\in\left\{ 1,2\right\} $
\end_inset

.
\begin_inset Formula 
\[
\lambda\c_{1}+\left(1-\lambda\right)\c_{2}=\lambda\left(A\x_{1}+\b\right)+\left(1-\lambda\right)\left(A\x_{2}+\b\right)=A\lambda\x_{1}+A\left(1-\lambda\right)\x_{2}+\b=A\left(\lambda\x_{1}+\left(1-\lambda\right)\x_{2}\right)+\b
\]

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
ברור כי 
\begin_inset Formula $\y=\lambda\x_{1}+\left(1-\lambda\right)\x_{2}\in\mathbb{R}^{n}$
\end_inset

 ולכן 
\begin_inset Formula $A\y+\b\in C$
\end_inset

 כנדרש.
 
\end_layout

\begin_layout Standard

\lang hebrew
אם כן מתקיים כי 
\begin_inset Formula $C$
\end_inset

 קבוצה קמורה ולכל 
\begin_inset Formula $\c_{1},\c_{2}\in C$
\end_inset

 ולכל 
\begin_inset Formula $\lambda\in\left(0,1\right)$
\end_inset

, קיימים 
\begin_inset Formula $\x_{1},\x_{2}\in\mathbb{R}^{n}$
\end_inset

 כך ש 
\begin_inset Formula $\c_{i}=A\x_{i}+\b$
\end_inset

 עבור 
\begin_inset Formula $i\in\left\{ 1,2\right\} $
\end_inset

 וכן 
\begin_inset Formula $A\left(\lambda\x_{1}+\left(1-\lambda\right)\x_{2}\right)+\b\in C$
\end_inset

.
 אם כן 
\end_layout

\begin_layout Standard

\lang hebrew
\begin_inset Formula 
\begin{align*}
g\left(\lambda\c_{1}+\left(1-\lambda\right)\c_{2}\right) & =f\left(A\left(\lambda\c_{1}+\left(1-\lambda\right)\c_{2}\right)+\b\right)=f\left(\lambda\left(A\c_{1}+\b\right)+\left(1-\lambda\right)\left(A\c_{2}+\b\right)\right)\\
 & \leq\lambda f\left(A\c_{1}+\b\right)+\left(1-\lambda\right)f\left(A\c_{2}+\b\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
כלומר 
\begin_inset Formula 
\[
g\left(\lambda\c_{1}+\left(1-\lambda\right)\c_{2}\right)\leq\lambda f\left(A\c_{1}+\b\right)+\left(1-\lambda\right)f\left(A\c_{2}+\b\right)=\lambda g\left(\c_{1}\right)+\left(1-\lambda\right)g\left(\c_{2}\right)
\]

\end_inset


