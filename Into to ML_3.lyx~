\xout default
\uuline default
\uwave default
\noun default
\color inherit
מבצע את העדכון הבא בעת בשגיאה ) 
\begin_inset Formula $\hat{y}_{t}\neq y_{t}$
\end_inset

(: 
\begin_inset Formula 
\[
\w_{t+1}\leftarrow\w_{t}+\eta_{t}y_{t}\x_{t}
\]

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
נניח שהדטא מופרד עם מרווח 
\begin_inset Formula $\gamma>0$
\end_inset

 וכי מתקיים 
\begin_inset Formula $\normt=1$
\end_inset

 
\begin_inset Formula $ $
\end_inset

 לכל 
\begin_inset Formula $t$
\end_inset

 
\begin_inset Formula $^{1}$
\end_inset

.
 בנוסף נניח כי האלגוריתם מבצע 
\begin_inset Formula $M$
\end_inset

 שגיאות וכולן מתרחשות בתחילתו.
 
\end_layout

\begin_layout Standard

\lang hebrew
נראה שעבור 
\begin_inset Formula $\eta_{t}=\frac{1}{\sqrt{t}}$
\end_inset

 מספר השגיאות של האלגוריתם חסום ע
\begin_inset Quotes erd
\end_inset

י 
\begin_inset Formula $\mathcal{O}\left(\frac{4}{\gamma^{2}}\ln\left(\frac{1}{\gamma}\right)\right)$
\end_inset

 כאשר אנו מניחים כי 
\begin_inset Formula $\gamma<1$
\end_inset

 אחרת אין לחסם משמעות.
 
\end_layout

\begin_layout Standard

\lang hebrew
מכך שהדטא מופרד, קיים מסווג מושלם שנסמנו 
\begin_inset Formula $\w^{*}$
\end_inset

, ונוכל להניח בלי הגבלת הכלליות כי 
\begin_inset Formula $\|\w_{t}\|_{2}=\frac{1}{2}$
\end_inset

.
 
\end_layout

\begin_layout Standard

\lang hebrew
לכל 
\begin_inset Formula $1\leq t\leq M$
\end_inset

 האלגוריתם מבצע טעות, ולכן: 
\begin_inset Formula 
\[
\left\langle \w_{t+1},\w^{*}\right\rangle =\left\langle \w_{t}+\eta_{t}y_{t}\x_{t},\w^{*}\right\rangle =\left\langle \w_{t},\w^{*}\right\rangle +\left\langle \eta_{t}y_{t}\x_{t},\w^{*}\right\rangle =\left\langle \w_{t},\w^{*}\right\rangle +\eta_{t}\left\langle y_{t}\x_{t},\w^{*}\right\rangle \geq\left\langle \w_{t},\w^{*}\right\rangle +\frac{1}{\sqrt{t}}\gamma
\]

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
כלומר עבור 
\begin_inset Formula $t>M$
\end_inset

 מתקיים כי 
\begin_inset Formula 
\begin{equation}
\left\langle \w_{t+1},\w^{*}\right\rangle \geq\gamma\cdot\sum_{t=1}^{M}\frac{1}{\sqrt{t}}\geq\gamma\sqrt{M}\label{eq:1}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
בנוסף, מתקיים כי לכל 
\begin_inset Formula $1\leq t\leq M$
\end_inset

 
\begin_inset Formula 
\[
\|\w_{t+1}\|_{2}^{2}=\|\w_{t}+\eta_{t}y_{t}\x_{t}\|_{2}^{2}=\|\w_{t}\|_{2}^{2}+2\left\langle \w_{t},\eta_{t}y_{t}\x_{t}\right\rangle +\|\eta_{t}y_{t}\x_{t}\|_{2}^{2}
\]

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
נשים לב כי לכל 
\begin_inset Formula $1\leq t\leq M$
\end_inset

 האלגוריתם מבצע טעות ולכן 
\begin_inset Formula $\left\langle \w_{t},y_{t}\x_{t}\right\rangle <0$
\end_inset

 ולכן 
\begin_inset Formula $2\left\langle \w_{t},\eta_{t}y_{t}\x_{t}\right\rangle <0$
\end_inset

 כלומר אנו מקבלים כי 
\begin_inset Formula 
\[
\|\w_{t+1}\|_{2}^{2}=\|\w_{t}\|_{2}^{2}+2\left\langle \w_{t},\eta_{t}y_{t}\x_{t}\right\rangle +\|\eta_{t}y_{t}\x_{t}\|_{2}^{2}\le\|\w_{t}\|_{2}^{2}+\frac{1}{t}\|\x_{t}\|_{2}^{2}\overset{1}{=}\|\w_{t}\|_{2}^{2}+\frac{1}{t}
\]

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
כלומר עבור 
\begin_inset Formula $t'>M$
\end_inset

 מתקיים כי 
\begin_inset Formula 
\begin{equation}
\|\w_{t}\|_{2}^{2}\leq\sum_{p=1}^{M}\frac{1}{p}=H_{M}\leq1+\ln\left(M\right)\label{eq:2}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
אם כן עבור 
\begin_inset Formula $t>M$
\end_inset

 מתקיים כי :
\begin_inset Formula 
\[
\gamma\sqrt{M}\leq\left\langle \w_{t},\w^{*}\right\rangle \underset{\text{Cauchy–Schwarz }}{\overset{\ref{eq:1}}{\leq}}\|\w_{t}\|_{2}\|\w^{*}\|_{2}\overset{\ref{eq:2}}{\leq}\sqrt{\frac{1}{4}+\frac{1}{4}\ln\left(M\right)}
\]

\end_inset


\end_layout

\begin_layout Standard

\lang hebrew
אם כן 
\begin_inset Formula 
\[
\gamma\sqrt{M}\leq\sqrt{\frac{1}{4}+\frac{1}{4}\ln\left(M\right)}
\]

\end_inset


\end_layout

\begin_layout Itemize

\lang hebrew
אם 
\begin_inset Formula $M=0$
\end_inset

 ברור כי מתקיים כי 
\begin_inset Formula $M\leq\frac{4}{\gamma^{2}}\ln\left(\frac{1}{\gamma}\right)$
\end_inset

.
 
\end_layout

\begin_layout Itemize

\lang hebrew
אם 
\begin_inset Formula $M=1$
\end_inset

 מתקיים כי 
\begin_inset Formula $\gamma\leq\frac{1}{4}$
\end_inset

 וכן 
\begin_inset Formula $1<16\ln\left(4\right)\leq\frac{4}{\gamma^{2}}\ln\left(\frac{1}{\gamma}\right)$
\end_inset


\end_layout

\begin_layout Itemize

\lang hebrew
עבור 
\begin_inset Formula $M\geq2$
\end_inset

 :
\end_layout

